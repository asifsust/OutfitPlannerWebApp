<!DOCTYPE html>

<html>

<head>
    <!-- CSS and JS gotten from CDNs -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- CSS and JS -->
    <link rel="stylesheet" href="css/import_from_gallery.css">
    <link rel="stylesheet" href="css/bottomBar.css">
    <link rel="stylesheet" href="css/main.css">
    <!-- title of page -->
    <title>Import from Gallery - Add Clothing</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <div class="row">
        <h1>Upload Image of Piece of Clothing</h1>
        <img src="<%= typeof file != 'undefined' ? file : '' %>" class="responsive-img">
        <% if (typeof file == 'undefined') { %>
        <form action="/add_clothing/import_from_gallery" method="post" enctype="multipart/form-data">
        <% } else { %>
        <form action="/add_clothing/set_categories" method="GET" enctype="multipart/form-data">
        <% } %>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Choose</span>
                    <input name="imageToUpload" type="file">
                </div>
                <div class="file-path-wrapper">
                    <% if (typeof file == 'undefined') { %>
                    <input class="file-path validate" type="text" placeholder="Upload file">
                    <% } else { %>
                    <input class="file-path validate" type="text" placeholder="Upload file" value="<%= file %>">
                    <% } %>
                </div>
            </div>
            <% if (typeof file != 'undefined') { %>
            <button type="submit" class="btn-large">Continue</button>
            <% } else { %>
            <button type="submit" class="btn-large">Upload</button>
            <% } %>
        </form>
    </div>
    <!-- bottom navigation bar -->
    <div class="bottom-nav">
        <a href="/index"><i class="material-icons home">home</i><br>Home</a>
        <a href="/clothes"><i class="material-icons clothes">folder</i><br>Clothes</a>
        <a href="/outfits"><i class="material-icons outfits">nature_people</i><br>Outfits</a>
        <a href="/profile"><i class="material-icons profile">person</i><br>Profile</a>
    </div>
</body>

</html>